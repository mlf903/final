<div class="page-header">
  <h1>Add a New Place</h1>
</div>

<div class="row">
  <div class="col-md-5">

    <%= form_tag "/places", "method" => "post"  %>

      <div class="form-group">
        <%= label_tag "name", "What is the name of the place?" %>
        <%= text_field_tag "name", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "address", "What is the address?" %>
        <%= text_field_tag "address", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "phone", "What is the phone number?" %>
        <%= text_field_tag "phone", "", "class" => "form-control" %>
      </div>

      <%= submit_tag "Add This Place", "class" => "btn btn-lg btn-success" %> or <%= link_to "Cancel", "/places" %>

    </form>
</div>
</div>