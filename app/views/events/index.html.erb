<div class="row">
  <div class="col-md-2 col-md-offset-8">
    <%= link_to "Add a New Event", "/events/new", "class" => 'btn btn-lg btn-primary' %>
  </div>
</div>

<div class="row">
  <div class="col-md-4"> 
    <h1><a id="M">Monday</a></h1>
  </div>
</div>

<div class="row event">

    <div class="col-md-8">

      <% Event.read("date" => "Monday").order("place_id desc").each do |event| %>
        <% place = Place.read("id" => event.place_id) %>
          <h2><%= link_to place.name, "/places/#{place.id}" %></h2>
          <h3><%= link_to event.title, "/events/#{event.id}" %>, <%= event.time %></h3>
          <p><%= event.details %></p>
      <% end %>
    </div>
</div>

